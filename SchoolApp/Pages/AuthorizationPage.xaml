<Page x:Class="SchoolApp.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SchoolApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">

            <StackPanel Orientation="Horizontal" Width="350" Margin="5">
                <TextBlock Style="{StaticResource AuthorizationTextBlock}">Логин:</TextBlock>
                <TextBox Style="{StaticResource AuthorizationBox}" Name="TxbLogin" Width="230"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Width="350" Margin="5">
                <TextBlock Style="{StaticResource AuthorizationTextBlock}">Пароль:</TextBlock>
                <PasswordBox Name="PsbPassword"
                             Style="{StaticResource PasswordBox}"
                             Width="230"></PasswordBox>
            </StackPanel>

            <Button Name="BtnLogin"
                    Click="BtnLogin_Click"
                    Width="350" Style="{StaticResource Button}">Авторизоваться</Button>
        </StackPanel>
    </Grid>
</Page>
